<resources>
    <!-- Base application theme. -->
    <style name="Theme.SubmissionAndroidSederhana" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_accent_light</item>
        <item name="colorPrimaryVariant">@color/yellow_accent</item>
        <item name="colorOnPrimary">@color/bg_darker</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_card_dark</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/bg_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ToolbarTheme">
        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>
</resources>